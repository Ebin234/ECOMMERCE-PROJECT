<link rel="stylesheet" href="/stylesheets/admin-page-style.css">
<link rel="stylesheet" href="/stylesheets/homepagestyle.css">

<style>

    .section-p1 {
    padding: 24px 10px;
}


    a.normal {
        font-size: 16px;
        font-weight: 500;
        padding: 9px 8px;
        color: #000;
        background-color: #fff;
        border-radius: 4px;
        cursor: pointer;
        border: none;
        outline: none;
        transition: 0.2s;
        text-decoration: none;
    }

    a.b1 {
        background-color: rgb(56, 179, 19);
        padding: 9px 20px;
    }

    a.b2 {
        background-color: rgb(238, 18, 18);
    }

    #cart .head {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

    .add {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 15px;
    }

    .add a {
        text-decoration: none;
        background-color: rgb(56, 179, 19);
        color: #000;
    }

    .add .normal {
        padding: 9px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

    #cart table tbody tr:hover {
        background: #fff;
    }

    #cart table td:nth-child(1) {
        width: 1px;
        text-align: center;
    }

    #cart table td:nth-child(2) {
        width: 9px;
        text-align: center;
    }

    #cart table td:nth-child(3) {
        width: 25px;
        text-align: start;
        line-height: 20px;
    }

    #cart table thead td {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 13px;
        padding: 18px 7px;
    }

    #cart table td:nth-child(4) {
        width: 21px;
        text-align: center;
        justify-content: flex-start;
    }

    #cart table td:nth-child(5) {
        width: 15px;
        text-align: center;
        justify-content: flex-start;
    }

    #cart table td:nth-child(6) {
        width: 20px;
        text-align: center;
        justify-content: flex-start;
    }

    #cart table td:nth-child(7) {
        width: 18px;
        text-align: start;
        justify-content: flex-start;
    }

    #cart table td:nth-child(8) {
        width: 15px;
            justify-content: center;
    align-items: center;
    text-align: center;
    }

    #cart table td:nth-child(9) {
        width: 9px;
        text-align: start;
        justify-content: flex-start;
    }

    #cart table tbody td:nth-child(9) {
        font-weight: 700;
        font-size: 16px;
    }



    #cart table td:nth-child(9) select {
        background: #f5f5f5;
        border: 1px solid gray;
        height: 29px;
        border-radius: 10px;
    }

    #cart table td:nth-child(9) select option {
        border-radius: 10px;
    }
</style>

<div class="container">
<div class="main">
    <div class="topbar">
        <div class="toggle" onclick="toggleMenu()"></div>
        <div class="search">
            <label for="">
                <input type="text" placeholder="Search Here">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
        </div>
        <div class="user">
            <img src="/login-images/avatar2.svg" alt="">
        </div>
    </div>


    <section id="cart" class="section-p1">
        <div class="head">
            <h2>Orders </h2>
        </div>
        <table id="productTable" width="100%">
            <thead>
                <tr>
                    <td>No</td>
                    <td>Image</td>
                    <td>Product</td>
                    <td>User</td>
                    <td>Date</td>
                    <td>Order Status</td>
                    <td>Address</td>
                    <td>Payment</td>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>1.</td>
                    <td><img src="/images/product-images/{{this.productDetails._id}}/0{{this.productDetails._id}}.jpg"
                            alt=""></td>
                    <td>{{this.productDetails.Name}} <br>
                        Category : {{this.productDetails.Category}} <br>
                        Brand : {{this.productDetails.brand}} <br>
                        Quantity : {{this.products.Quantity}} <br>
                        Price : {{this.productDetails.Price}} <br>
                        Stock : {{this.productDetails.Stoke}}
                    </td>
                    <td>{{this.deliveryDetails.fullName}} <br>

                        {{this.deliveryDetails.mobile}}
                    </td>
                    <td>{{this.date}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        {{this.deliveryDetails.fullName}} <br>
                        {{this.deliveryDetails.address}} <br>
                        {{this.deliveryDetails.state}} <br>
                        {{this.deliveryDetails.city}} <br>
                        {{this.deliveryDetails.pincode}}
                    </td>
                    <td>{{this.paymentMethod}}</td>

                            {{#ifEquals this.products.deliveryStatus "Delivered"}}
                            <td>Delivered</td>

                            {{else}}
                            <td>
                                <select id="change" name="deliveryStatus"
                                    onchange="changeDeliveryStatus('{{this._id}}','{{this.products.item}}','{{this.userDetails.Email}}',this)">
                                    <option value="{{this.deliveryStatus}}">{{this.products.deliveryStatus}}</option>
                                    <option name="deliveryStatus" value="Pending">Pending</option>
                                    <option value="Shipped">Shipped</option>
                                    <option name="deliveryStatus" value="Delivered">Delivered</option>

                                </select>
                            </td>
                            {{/ifEquals}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</div>
</div>


<script>
    $(function () {
        $('#productTable').DataTable();
    });
</script>


<script>
    function toggleMenu() {
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');
        toggle.classList.toggle('active')
        navigation.classList.toggle('active')
        main.classList.toggle('active')
    }
</script>



<script>
    function changeDeliveryStatus(orderId, prodId, userEmail, obj) {

        $.ajax({
            url: '/admin/change-delivery-status',
            data: {
                orderId: orderId,
                prodId: prodId,
                userEmail: userEmail,
                data: obj.value
            },
            method: 'post',
            success: (response) => {
                
                location.reload()
            }
        })
    }
</script>