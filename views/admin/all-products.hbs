<style>
    a.normal {
    font-size: 14px;
    font-weight: 600;
    padding: 9px 8px;
    color: #000;
    background-color: #fff;
    border-radius: 4px;
    cursor: pointer;
    border: none;
    outline: none;
    transition: 0.2s;
    text-decoration: none;
}

a.b1{
    background-color: rgb(56, 179, 19);
    padding: 9px 20px;
}

a.b2{
    background-color: rgb(238, 18, 18);
}

.add {
    display: flex;
    flex-wrap: nowrap;
    justify-content: end;
}
.add a{
    text-decoration: none;
    background-color: rgb(56, 179, 19);
    color: #000;
}
.add .normal{
    padding: 9px 16px;
    border-radius: 4px;
    cursor: pointer;
}
</style>

<section id="cart" class="section-p1">
    <div class="add"><a href="/admin/add-product" class="normal">add product</a></div>
    <table id="productTable" width="100%">
        <thead>
            <tr>
                <td>No</td>
                <td>Image</td>
                <td>product</td>
                <td>Catagory</td>
                <td>stock</td>
                <td>Price</td>
                <td>options</td>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>1.</td>
                <td><img src="/images/product-images/{{this._id}}/0{{this._id}}.jpg" alt=""></td>
                <td>{{this.Name}}</td>
                <td>{{this.Catagory}}</td>
                <td>{{this.Stoke}}</td>
                <td>${{this.Price}}</td>
                <td>
                    <a href="/admin/edit-product/{{this._id}}" class=" normal b1 ">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="normal b2 ">Delete</a>
                </td>
            </tr>
            {{/each}}
