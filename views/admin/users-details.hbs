<link rel="stylesheet" href="/stylesheets/admin-page-style.css">
<link rel="stylesheet" href="/stylesheets/homepagestyle.css">

<style>
    button.normal {
        font-size: 16px;
        font-weight: 500;
        padding: 9px 8px;
        color: #000;
        background-color: #fff;
        border-radius: 4px;
        cursor: pointer;
        border: none;
        outline: none;
        transition: 0.2s;
        text-decoration: none;
    }

    button.b1 {
        background-color: rgb(56, 179, 19);
        padding: 9px 20px;
    }

    button.b2 {
        background-color: rgb(238, 18, 18);
        padding: 9px 36px;
    }

    #cart .head {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

    .add {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 15px;
    }

    .add button {
        text-decoration: none;
        background-color: rgb(56, 179, 19);
        color: #000;
    }

    .add .normal {
        padding: 9px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

    #cart table tbody tr:hover {
        background: #fff;
    }
</style>

<div class="container">
<div class="main">
    <div class="topbar">
        <div class="toggle" onclick="toggleMenu()"></div>
        <div class="search">
            <label for="">
                <input type="text" placeholder="Search Here">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
        </div>
        <div class="user">
           <img src="/images/login-images/prof1.svg" alt="">
        </div>
    </div>


    <section id="cart" class="section-p1">
        <div class="head">
            <h2>Users Details</h2>
        </div>
        <table id="productTable" width="100%">
            <thead>
                <tr>
                    <td>No</td>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Mobile</td>
                    <td>Sign Up Date</td>
                    <td>options</td>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>1.</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.Email}}</td>
                    <td>{{this.Mobile}}</td>
                    <td>{{this.Date}} <br>{{this.Time}}</td>
                    <td>
                        {{#if this.Blocked}}
                        <button onclick="unblockUser('{{this._id}}')" class=" normal b1 ">Unblock</button>
                        {{else}}
                        <button onclick="blockUser('{{this._id}}')" class="normal b2 ">Block</button>
                        {{/if}}


                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </section>
</div>
</div>

<script>
    $(function () {
        $('#productTable').DataTable();
    });
</script>


<script>
    function toggleMenu() {
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');
        toggle.classList.toggle('active')
        navigation.classList.toggle('active')
        main.classList.toggle('active')
    }
</script>

<script>
    function blockUser(userId) {

        Swal.fire({
            title: 'Are you sure?',
            {{!-- text: "You won't be able to revert this!", --}}
            width: 700,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,Block it!'
        }).then((result) => {
                if (result.isConfirmed) {
                         $.ajax({
                            url: '/admin/block-user',
                            data: {
                                 userId: userId
                                },
                            method: 'post',
                            success: (response) => {
                                if (response.blocked) {
                                    Swal.fire('Blocked!', 'success')
                                    .then(() => {
                                        location.reload()
                                    })
                                }
                            }
                        })
                    }
            })
    }

    function unblockUser(userId) {

        Swal.fire({
            title: 'Are you sure?',
            {{!-- text: "You won't be able to revert this!", --}}
            width: 700,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes,Unblock it!'
        }).then((result) => {
                if (result.isConfirmed) {
                        $.ajax({
                            url: '/admin/unblock-user',
                            data: {
                                     userId: userId
                                },
                            method: 'post',
                            success: (response) => {
                                if (response.unblocked) {
                                    Swal.fire('UnBlocked!', 'success')
                                        .then(() => {
                                            location.reload()
                                        })
                                }
                            }
                         })
                }
            })
    }
</script>