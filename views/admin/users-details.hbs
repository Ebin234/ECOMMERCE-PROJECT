<script>
    function blockUser(userId){
        $.ajax({
            url : '/admin/block-user',
            data : {
                userId : userId
            },
            method : 'post',
            success : (response)=>{
                if(response.blocked){
                    location.reload()
                }
            }
        })
    }

    function unblockUser(userId){
        $.ajax({
            url : '/admin/unblock-user',
            data : {
                userId : userId
            },
            method : 'post',
            success : (response)=>{
                if(response.unblocked){
                    location.reload()
                }
            }
        })
    }
</script>