<link rel="stylesheet" type="text/css" href="/stylesheets/headerstyle.css">
<link rel="stylesheet" href="/stylesheets/homepagestyle.css">
<link rel="stylesheet" href="/stylesheets/admin-page-style.css">


<style>
    .mainhead {
        position: absolute;
        width: calc(100% - 300px);
        left: 300px;
        min-height: 100vh;
        background: #f5f5f5;
        transition: 0.5s;
    }

    .mainhead.active {
        width: calc(100% - 60px);
        left: 60px;
    }

    .mainhead .topbar {
        width: 100%;
        height: 80px;
        background: #fff;
        padding: 0 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .toggle {
        position: relative;
        width: 60px;
        height: 60px;
        /* background: #f00; */
        cursor: pointer;
    }

    .toggle::before {
        content: '\f0c9';
        font-family: fontAwesome;
        position: absolute;
        width: 100%;
        height: 100%;
        line-height: 60px;
        font-size: 24px;
        text-align: center;
        color: #111;
    }

    .search {
        position: relative;
        width: 400px;
        margin: 0 10px;
    }

    .search label {
        position: relative;
        width: 100%;
    }

    .search label input {
        width: 100%;
        height: 40px;
        border-radius: 40px;
        padding: 5px 20px;
        padding-left: 35px;
        outline: none;
        border: 1px solid rgba(0, 0, 0, 0.2);
    }

    .search label .fa {
        position: absolute;
        left: 15px;
        top: 4px;
    }

    .user {
        position: relative;
        min-width: 50px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        overflow: hidden;
        cursor: pointer;
    }

    .user img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
    
<div class="container">
    <div class="main">
    <div class="topbar">
        <div class="toggle" onclick="toggleMenu()"></div>
        <div class="search">
            <label for="">
                <input type="text" placeholder="Search Here">
                <i class="fa fa-search" aria-hidden="true"></i>
            </label>
        </div>
        <div class="user">
           <img src="/images/login-images/prof1.svg" alt="">
        </div>
    </div>

    <section id="page-header" class="about-header">
        <h2>Edit product</h2>
    </section>

    <section class="section-p2">
        <div class="section-m1 main1">
            <form class="addform" action="/admin/edit-product1/{{product._id}}" method="post"
                enctype="multipart/form-data">
                <div class="s1">
                    <div class="s2">
                        <label for="">product name</label>
                        <input type="text" name="Name" value="{{product.Name}}" required>
                        <label for="">Category</label>
                        <select id="" name="Category" required>
                            <option value="{{product.Category}}">{{product.Category}}</option>
                            {{#each categories}}
                            <option value="{{this.name}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="">brand</label>
                        <select id="" name="brand" required>
                            <option value="{{product.brand}}">{{product.brand}}</option>
                            {{#each brands}}
                            <option value="{{this.name}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="">stoke</label>
                        <input type="number" name="Stoke" value="{{product.Stoke}}" required>
                        <label for="">Price</label>
                        <input type="number" name="Price" value="{{product.Price}}" required>
                        <label for="">Featured</label>
                        <select id="" name="Featured" required>
                            <option value="{{product.Featured}}">{{product.Featured}}</option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                    <div class="s3">
                        <label for="" class="des">Description</label>
                        <ul class="wd">
                            <li><input type="text" name="Description1" value="{{product.Description1}}"></li>
                            <li><input type="text" name="Description2" value="{{product.Description2}}"></li>
                            <li><input type="text" name="Description3" value="{{product.Description3}}"></li>
                            <li><input type="text" name="Description4" value="{{product.Description4}}"></li>
                            <li><input type="text" name="Description5" value="{{product.Description5}}"></li>
                        </ul>
                    </div>
                </div>
                <div class="addimg">
                    <label for="">image</label>
                    <img src="/images/product-images/{{product._id}}/0{{product._id}}.jpg" id="imgView0"
                        style="width: 100px;height: auto;">
                    <input type="file" name="image" onchange="viewImage0(event)">
                    <label for="">subimage</label>
                    <div>
                        <img src="/images/product-images/{{product._id}}/1{{product._id}}.jpg" id="imgView1"
                            style="width: 100px;height: auto;">
                        <img src="/images/product-images/{{product._id}}/2{{product._id}}.jpg" id="imgView2"
                            style="width: 100px;height: auto;">
                        <img src="/images/product-images/{{product._id}}/3{{product._id}}.jpg" id="imgView3"
                            style="width: 100px;height: auto;">
                    </div>
                    <input type="file" name="image" onchange="viewImage1(event)">
                    <input type="file" name="image" onchange="viewImage2(event)">
                    <input type="file" name="image" onchange="viewImage3(event)">
                </div>
                <div class="subbtn">
                    <button type="submit">submit</button>
                </div>
            </form>
        </div>
    </section>
    </div>
</div>

<script>
    function viewImage0(event) {
        document.getElementById('imgView0').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage1(event) {
        document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event) {
        document.getElementById('imgView2').src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event) {
        document.getElementById('imgView3').src = URL.createObjectURL(event.target.files[0])
    }
</script>

<script>
    function toggleMenu() {
        let toggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        let main = document.querySelector('.main');
        toggle.classList.toggle('active')
        navigation.classList.toggle('active')
        main.classList.toggle('active')
    }
</script>