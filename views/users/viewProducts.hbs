<script>
    $('input[name=categoryName]').change(function () {
        $.ajax({
            url: '/product-filter',
            data: $('#productfilter').serialize(),
            method: 'post',
            success: (response) => {
                if (response.status) {
                    $('#products').load(location.href + " #products")
                }
            }
        })
    })

    $('input[name=brandName]').change(function () {
