</script>


<script>
    function searchProduct() {
        let search = document.getElementById('searchContent').value;
        $.ajax({
            url: '/search-product',
            data: {
                result: search
            },
            method: 'post',
            success: ((response) => {
                location.href = '/shope'
            })
        })
    }
</script>