<body>
    <div class="container">
        <div class="img">
            <img src="images/signup-images/del1.svg" alt="">
        </div>
        <div class="login-container">
            <form action="/signup" method="post">
                <img class="avatar" src="images/signup-images/sign1.svg" alt="">
                <h2>welcome</h2>
                {{#if userErr}}
                <p class="error" style="color: red;">User Already Exist</p>
                {{/if}}
                {{#if phoneErr}}
                <p class="error" style="color: red;">Invalid Mobile Number</p>
                {{/if}}
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h5>Name</h5>
                        <input type="text" name="Name" class="input" required>
                    </div>
                </div>
                {{!--<div class="input-div  two">
                    <div class="i">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div>
                        <h5>Phone</h5>
                        <input type="password" class="input">
                    </div>
                </div>--}}
                <div class="input-div two">
                    <div class="i">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div>
                        <h5>Email</h5>
                        <input type="email" name="Email" class="input" required>
                    </div>
                </div>
                <div class="input-div two">
                    <div class="i">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div>
                        <h5>Mobile</h5>
                        <input type="phone" name="Mobile" class="input" required minlength="10" maxlength="10">
                    </div>
                </div>
                <div class="input-div two">
                    <div class="i">
                        <i class="fa-solid fa-lock"></i>
                    </div>
                    <div>
                        <h5>Password</h5>
                        <input type="password" id="pwd" name="Password" class="input" required minlength="5">
                    </div>
                </div>
                <div class="input-div two">
                    <div class="i">
                        <i class="fa-solid fa-lock"></i>
                    </div>
                    <div>
                        <h5>Confirm Password</h5>
                        <input type="password" id="cpwd" name="confirmPassword" class="input" required minlength="5">
                    </div>
                </div>
                <div class=" one" id="showerrorpwd"></div>
                <div class="mt-3">
                    <a style="float:right ; margin: 7px 0;" href="/login">Already have an account</a>
                </div>
                <input type="submit" class="login-btn mt-5 " value="signup">
            </form>
        </div>
    </div>
    <script type="text/javascript" src="/javascripts/login.js"></script>


     <script>
        $(document).ready(function () {
            $('#cpwd').keyup(function () {
                var pwd = $('#pwd').val();
                var cpwd = $('#cpwd').val();
                if (cpwd != pwd) {
                    $('#showerrorpwd').html('**password are not matching');
                    $('#showerrorpwd').css('color', 'red');
                    $('#showerrorpwd').css('text-align', 'left');
                    $('#showerrorpwd').css('padding', '10px');

                    $("#form").submit((e) => {
                        e.preventDefault()
                    })

                } else {
                    $('#showerrorpwd').html('');
                }
            });
        });

        
    </script>
</body>

