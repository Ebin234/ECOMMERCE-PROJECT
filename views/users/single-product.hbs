    </div>
</section>




<script>
    function clickimg(smallimg) {
        var fullimg = document.getElementById('imagebox');
        fullimg.src = smallimg.src
    }
</script>

<script>
    function buyNow(prodId) {
        $.ajax({
            url: '/buysingleproduct',
            data: {
                prodId: prodId,

            },
            method: 'post',
            success: (response) => {
                if (response.productNotFount) {
                    $.ajax({
                        url: '/add-to-cart/' + prodId,
                        method: 'get',
                        success: (response) => {
                            //alert(response)
                            if (response.cartAdded) {
                                let count = $('#cart_count').html()
                                console.log("count", count)
                                count = parseInt(count) + 1
                                $("#cart_count").html(count)
                                location.href = '/cart'
                            }
                        }
                    })
                }else{
                    location.href = '/cart'
                }
            }
        })
    }
</script>