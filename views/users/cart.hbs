<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody> 
                  {{#each products}}
                <tr>
                    
                    <td><img style="width:70px ;height:70px ;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>{{this.Name}}</td>
                    <td>Rs.{{this.Price}}</td>
                    
                    <td>
                        <button class="cart-item-count mr-3">-</button>
                        2
                        <button class="cart-item-count ml-3" >+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                
                {{/each}}
            </tbody> 
        </table>
        <hr>
        <div class="float-right pr-5">
        <h3 class="float-right mr-5">Total: Rs.100000</h3><br>
        <a href="/place-order" class="btn btn-success mt-3" style="width:100% ;"><b>Place Order</b></a>
        </div>
    </div>
</section>