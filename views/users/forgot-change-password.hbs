<div class="update-profile">
    <form id="form" action="" method="post" enctype="multipart/form-data">
        <div class="flex">
            <div class="inputBox">
                {{!-- <p id="error">Confirm Password Error!!!</p> --}}
                {{!-- <span>Old Password :</span>
                <input type="password" name="old_password" placeholder="enter previous password" class="box"> --}}
                <span>NewPassword :</span>
                <input id="pwd" type="password" name="new_password" placeholder="enter new password" class="box" minlength="5">
                <span>Confirm Password :</span>
                <input id="cpwd" type="password" name="password_confirm" placeholder="confirm new password" class="box">
            </div>
            <div id="showerrorpwd"></div>
            <button type="submit" class="btn">submit</button>
            <a href="/profile" class="delete-btn">go back</a>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#cpwd').keyup(function () {
            var pwd = $('#pwd').val();
            var cpwd = $('#cpwd').val();
            if (cpwd != pwd) {
                $("#form").submit((e) => {
                    e.preventDefault()
                }) 
                $('#showerrorpwd').html('**password are not matching');
                $('#showerrorpwd').css('color', 'red');
                $('#showerrorpwd').css('text-align', 'left');
                $('#showerrorpwd').css('padding', '10px');

            } else {
                $('#showerrorpwd').html('');

                 $("#form").submit((e) => {
                    $.ajax({
                        url: '/forgot-change-password',
                        method: 'post',
                        data: $('#form').serialize(),
                        {{!-- success: (response) => {
                            if (response.response) {
                                location.href = '/profile'
                            } else {
                                alert("Incorrect old password")
                                location.href='/change-password'
                            }
                        } --}}
                    })
                })



            }
        });
    });
</script>

