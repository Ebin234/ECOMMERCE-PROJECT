<section id="cart" class="section-p1">
    <table width="100%">
        <thead>
            <tr>
                <td>No</td>
                <td>Image</td>
                <td>product</td>
                <td>Date</td>
                <td>Status</td>
                <td>Address</td>
                <td>Delivery Status</td>
                <td>Invoice</td>
            </tr>
        </thead>
        <tbody>
            {{#each orderItems}}
            <tr>
                <td>{{inc @index}}</td>
                <td><img src="/images/product-images/{{this.product}}/0{{this.product}}.jpg" alt=""></td>
                <td>{{this.productName}} <br>
                    Brand : {{this.brand}} <br>
                    Catagory : {{this.catagory}} <br>
                    Quantity : {{this.quantity}} <br>
                    Price : {{this.price}}
                </td>
                <td>{{this.date}} <br>
                    {{this.time}}
                </td>
                <td>{{this.status}}</td>
                <td>{{this.deliveryDetails.fullName}} <br>
                    {{this.deliveryDetails.address}} <br>
                    {{this.deliveryDetails.state}} <br>
                    {{this.deliveryDetails.city}} <br>
                    pin: {{this.deliveryDetails.pincode}} <br>
                    mob: {{this.deliveryDetails.mobile}}
                </td>
                <td>pending</td>
                <td><i class="fa-solid fa-file-invoice"></i></td>
            </tr>
            {{/each}}
