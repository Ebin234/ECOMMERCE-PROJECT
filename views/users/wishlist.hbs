<script>
    function removeWishlistProduct(prodId,wishlistId){
        $.ajax({
            url:'/remove-wishlist-product',
            data:{
                prodId:prodId,
                wishlistId:wishlistId
            },
            method:'post',
            success:(response)=>{
                if(response.removeProduct){
                   alert("product removed from wishlist") 
                   location.reload()
                }
            }
        })
    }
</script>