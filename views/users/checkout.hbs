<section id="page-header" class="about-header">
    <h2>#CheckOut</h2>
    {{!-- <p>LEAVE A MESSAGE,We love to hear from you!</p> --}}
</section>

<section class="section-p2 ">
    <div class="section-m1 main">
        <h2 class="head">Billing Details</h2>
        <hr class="hr">
        <div class="formbody">
            <div id="form">
                <form id="checkout-form" class="billing" action="" method="post" enctype="multipart/form-data">
                    <div class="details">
                        <label for="">Full Name*</label>
                        <input type="text" name="Name" required>
                        <input type="text" name="userId" value="{{user._id}}" hidden>
                        <label for="">Address*</label>
                        <input type="text" name="address" required>
                        <label for="">Town/City*</label>
                        <input type="text" name="city" required>
                        <label for="">State*</label>
                        <input type="text" name="state" required>
                        <label for="">Postcode/Zip*</label>
                        <input type="number" name="pincode" required>
                        <label for="">Phone*</label>
                        <input type="phone" name="mobile" required minlength="10" maxlength="10">
                        <input type="number" name="total" value={{total}} hidden>
                    </div>



                    <div class="order">
                        <h3>your order</h3>
                        <hr>
                        <table>
                            <thead>
                                <tr>
                                    <td>Product</td>
                                    <td>qty</td>
                                    <td>Total</td>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>{{this.product.Name}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td>{{this.totalPrice}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div>
                            <hr>
                            <div class="total">
                                <ul>
                                    <li>Total</li>
                                    <li>Rs.{{total}}</li>
                                </ul>
                            </div>
                            <hr>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="payment-method" value="COD" checked>COD
                                </label>
                                <label>
                                    <input type="radio" name="payment-method" value="ONLINE">Online Payment
                                </label>
                            </div>
                        </div>
                        <div class="checkoutbtn">
                            <button class="normal" type="submit">Place Order</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</section>




<script>
    $("#checkout-form").submit((e) => {
        e.preventDefault()
        $.ajax({
            url: '/checkout',
            method: 'post',
            data: $('#checkout-form').serialize(),
            success: (response) => {
                {{!-- alert(response) --}}
                if(response.codSuccess){
                    location.href = '/order-success'
                }else{
                    razorpayPayment(response)
                }
            }
        })
    })

    function razorpayPayment(order){
        var options = {
